<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bsdevelopment.serverapp.SettingsController">
   <center>
      <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="290.0" prefWidth="289.0" spacing="10.0" BorderPane.alignment="TOP_CENTER">
         <padding>
            <Insets top="40.0" />
         </padding>
         <HBox alignment="CENTER" fillHeight="false" prefWidth="600.0">
            <Text fontSmoothingType="LCD" nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="Server Port: " textOrigin="CENTER" wrappingWidth="101.74658203125">
               <font>
                  <Font name="Hack Regular" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </Text>
            <TextField fx:id="serverPort" text="25565" />
         </HBox>
         <HBox alignment="CENTER" fillHeight="false" prefWidth="520.0">
            <Text fontSmoothingType="LCD" nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="App Theme: " textAlignment="RIGHT" textOrigin="CENTER" wrappingWidth="101.74658203125">
               <font>
                  <Font name="Hack Regular" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </Text>
            <ChoiceBox fx:id="themeSelector" onInputMethodTextChanged="#updateTheme" prefWidth="150.0" />
         </HBox>
         <HBox alignment="CENTER" fillHeight="false" prefWidth="520.0">
            <padding>
               <Insets right="75.0" />
            </padding>
            <Text fontSmoothingType="LCD" nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="Accept EULA: " textAlignment="RIGHT" textOrigin="CENTER" wrappingWidth="104.74658203125">
               <font>
                  <Font name="Hack Regular" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </Text>
            <CheckBox fx:id="acceptEULA" mnemonicParsing="false" selected="true">
               <padding>
                  <Insets right="60.0" />
               </padding></CheckBox>
         </HBox>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="BASELINE_CENTER" prefHeight="42.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <Button fx:id="save" mnemonicParsing="false" onAction="#saveSettings" text="Save Settings" />
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER" prefHeight="68.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <Text fill="#d01515" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Server Master Settings" textAlignment="RIGHT" wrappingWidth="241.13671875">
            <font>
               <Font name="Arial Black" size="19.0" />
            </font>
         </Text>
      </HBox>
   </top>
   <left>
      <VBox alignment="BASELINE_CENTER" prefHeight="290.0" prefWidth="153.0" BorderPane.alignment="BOTTOM_CENTER">
         <ImageView fitHeight="170.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@icon.png" />
         </ImageView>
      </VBox>
   </left>
   <right>
      <Pane prefHeight="290.0" prefWidth="174.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
